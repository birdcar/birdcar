---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<div class="grid items-center grid-cols-12 grid-rows-1 p-4">
  <header>
    <h2
      class="text-2xl font-semibold hover:text-red-600 hover:dark:text-red-400"
    >
      <a href="/">{SITE_TITLE}</a>
    </h2>
  </header>

  <nav class="col-start-6 col-span-2 flex justify-around space-x-4">
    <HeaderLink href="/uses" class="hover:text-zinc-400 font-semibold">
      Uses
    </HeaderLink>
    <HeaderLink href="/feed.xml" class="hover:text-zinc-400 font-semibold">
      RSS
    </HeaderLink>
  </nav>
</div>
